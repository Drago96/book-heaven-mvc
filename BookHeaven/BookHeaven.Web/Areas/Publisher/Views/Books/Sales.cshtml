@model IEnumerable<SelectListItem>
@{
    ViewData["Title"] = "Sales";
}

<div class="row">
    <div class="col-md-10 col-md-offset-2">
        <h1>Sales</h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-2 well links-well">
        @await Html.PartialAsync("_PublisherLinksPartial")
    </div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-2">
                <select id="year-select" class="form-control" asp-items="Model"></select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <canvas id="bar-chart" width="500" height="300"></canvas>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
       PublisherSalesModule.Initialize()
    </script>
}
