@model BookSearchComponentModel

<form method="get" asp-area="" asp-controller="Books" asp-action="Search" class="navbar-form">
    <div class="form-group-sm">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <input asp-for="SearchTerm"  placeholder="Search..." class="form-control"/>
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-info btn-sm">Search</button>
            </div>
            
            <div class="col-md-6 col-no-padding-left">
                <select class="selectpicker" data-style="btn-sm" data-actions-box="true" title="Select categories..." asp-for="Categories" asp-items="@Model.AllCategories"></select>
            </div>
        </div>
    </div>
    <div class="row">
    </div>
</form>



