@using BookHeaven.Web.Infrastructure.ViewComponents
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="img/ico" href="@ResourceConstants.FaviconImageUrl">
    <title>@ViewData["Title"] - Book Heaven</title>
    @await Html.PartialAsync("_StyleLinksPartial")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Book Heaven</a>
            </div>
            <ul class="nav navbar-collapse collapse navbar-nav">
                <li>
                    @await Component.InvokeAsync(typeof(SearchViewComponent))
                </li>
            </ul>
            <div class="navbar-collapse collapse">              
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @await Html.PartialAsync("_StatusMessagesPartial")
        @RenderBody()
        <hr />
        <footer>
            <p class="pull-right">&copy; 2017 - Book Heaven</p>
        </footer>
    </div>

    @await Html.PartialAsync("_ScriptLinksPartial")

    @RenderSection("Scripts", required: false)
    @RenderSection("SearchScripts", required: false)
</body>
</html>